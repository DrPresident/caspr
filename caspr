from motion_controller import Motion
from motor_controller import Motor
from sys import stdin, argv, exit
from signal import signal
from socket import *
from threading import Thread
#from curses import *
from getch import getch

# setup
gpio.setmode(gpio.BCM)

display = Display()
display.intro_anim()

"""
